<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModel="clr-namespace:MyFridge_UserInterface_MAUI.ViewModel"
             x:Class="MyFridge_UserInterface_MAUI.Views.UserLoginPage"
             Title="User Login"
             Shell.TabBarIsVisible="False"
             Shell.FlyoutBehavior="Disabled"
             BackgroundColor="#f0f4f8"
             x:DataType="viewModel:UserLoginViewModel">

    <StackLayout Padding="20">
        <Label Text="Welcome to MyFridge" 
               FontSize="24" 
               HorizontalOptions="Center" 
               Margin="0,50,0,0" />
        <Entry Text="{Binding EntryEmail}"
               Placeholder="Email" 
               Margin="10" />
        <Entry Text="{Binding EntryPassword}"
               Placeholder="Password" 
               IsPassword="True" 
               Margin="10" />
        <Button Text="Login" 
                Clicked="OnLoginButtonClicked" 
                Margin="10,30,10,0" />
        <Label Text="{Binding LoginResultMsg}"
               FontSize="18" 
               HorizontalOptions="Center" 
               Margin="0,30,0,0" />
    </StackLayout>
</ContentPage>